/* pages/Map/Map.wxss */
/* 全局样式重置和变量定义 */
:root {
  --primary-color: #4187f2;
  --primary-light: #e6f0ff;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --danger-color: #ff4d4f;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --border-color: #f0f0f0;
  --background-light: rgba(255, 255, 255, 0.95);
  --shadow-light: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  --shadow-medium: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
  --border-radius: 30rpx;
  --transition: all 0.3s ease;
}

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background-color: #f5f5f5;
}

.shuru {
  position: absolute;
  left: 0;
  bottom: 0;
}

/* 搜索框区域 */
.Search_Box {
  position: absolute;
  width: 100%;
  height: 32vh;
  left: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(255,255,255,0) 0%, var(--background-light) 40%);
  backdrop-filter: blur(20rpx);
  border-radius: 50rpx 50rpx 0 0;
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: var(--transition);
}

.Search_InputBox {
  width: 90%;
  height: 110rpx;
  margin: 40rpx auto 10rpx;
  border-radius: 5px;
  background-color: white !important;
  display: flex;
  align-items: center;
  justify-items: center;
  padding-left: 30rpx;
  box-sizing: border-box;
  border: 1px solid #303030;
  border-bottom: 2px solid #9a9a9a;
  transition: all 0.3s ease;
}

.Search_InputBox:active {
  border-bottom: 2px solid #4cc2ff;
  background-color: #f5f5f5 !important;
}

.Search_Box_gnBox_btn {
  width: 19%;
  height: 100%;
  background: linear-gradient(135deg, var(--primary-color), #2c6fe0);
  margin-left: 3%;
  border-radius: var(--border-radius);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-light);
  transition: var(--transition);
}

.Search_Box_gnBox_btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-light);
}

.Search_Box_gnBox_btn_icon {
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
}

.Search_InputBox2_Big {
  position: relative;
  display: flex;
  width: 90%;
  height: 110rpx;
  margin: 40rpx auto 10rpx;
}

.Search_InputBox2 {
  width: 78%;
  height: 100%;
  border-radius: 5px;
  background-color: white !important;
  display: flex;
  align-items: center;
  justify-items: center;
  padding-left: 30rpx;
  box-sizing: border-box;
  border: 1px solid #303030;
  border-bottom: 2px solid #9a9a9a;
  transition: all 0.3s ease;
}

.Search_InputBox2:active {
  border-bottom: 2px solid #4cc2ff;
  background-color: #f5f5f5 !important;
}

.SsImgBox {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.SsImgBox image {
  width: 70%;
  transition: var(--transition);
}

.SsContentBox {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #4cc2ff;
  font-weight: 400;
  letter-spacing: 1rpx;
}
.Search_Page {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background-color: #fafafa;
  z-index: 1000;
}

.Sp_TopBox {
  position: fixed;
  width: 100%;
  height: 20vh;
  background-color: white;
  border-radius: 0 0 50rpx 50rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
}

.Sp_TopBox_top {
  position: absolute;
  width: 100%;
  height: 11vh;
  display: flex;
  align-items: flex-end;
}

.Sp_TopBox_top_title {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 5rpx;
  display: flex;
  align-items: center;
  justify-items: center;
  padding-bottom: 20rpx;
}

.fh_text {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.fh_Icon {
  width: 80rpx;
  height: 80rpx;
  margin-top: 12rpx;
  margin-left: 30rpx;
  padding: 10rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition);
}

.fh_Icon image {
  width: 40rpx;
  height: 40rpx;
}

.fh_Icon:active {
  background-color: var(--border-color);
}

.Sp_SearchBox_All {
  position: absolute;
  left: 0;
  bottom: 50rpx;
  width: 100%;
  height: 90rpx;
  padding-left: 5%;
  padding-right: 5%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.Sp_SearchBox_All .search-bar {
  flex: 1;
  width: 200px;
  height: 35px;
  border-radius: 5px;
  outline: none;
  border: 1px solid #303030;
  border-bottom: 2px solid #9a9a9a;
  padding-left: 10px;
  padding-right: 10px;
  background-color: #333333 !important;
  background-image: none !important;
  color: #4cc2ff;
  transition: all 0.3s ease;
  font-size: 30rpx;
  margin-right: 30rpx;
  box-sizing: border-box;
  -webkit-appearance: none;
  -webkit-background-clip: padding-box;
  background-clip: padding-box;
}

.search-bar::placeholder {
  color: #9a9a9a;
}

.Sp_SearchBox_All .search-bar:hover {
  background-color: #404040 !important;
  border-bottom: 2px solid #9a9a9a;
}

.Sp_SearchBox_All .search-bar:active,
.Sp_SearchBox_All .search-bar:focus {
  background-color: #282828 !important;
  border: 1px solid #333333;
  border-bottom: 2px solid #4cc2ff;
}

.Sp_AddBtn {
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  color: var(--primary-color);
  font-weight: 500;
  border-radius: 25rpx;
  transition: var(--transition);
}

.Sp_AddBtn:active {
  background-color: var(--primary-light);
}

.Sp_ResultBox {
  width: 100%;
  margin-top: 20vh;
  background-color: white;
}

.Sp_ResultItem {
  width: 90%;
  height: 140rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid var(--border-color);
  font-size: 30rpx;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  box-sizing: border-box;
  transition: var(--transition);
}

.Sp_ResultItem:active {
  background-color: #f8f8f8;
}

.Sp_ResultItem:last-child {
  border-bottom: none;
}

.Sp_ResultItem_img {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.Sp_ResultItem_img image {
  width: 80%;
  opacity: 0.7;
}
/* 底部功能区 */
.Search_Box_gnBox {
  width: 90%;
  margin: 10rpx auto;
  margin-top: 20rpx;
}

/* 弹窗样式 */
.popupBox {
  position: absolute;
  width: 100%;
  height: 100vh;
  left: 0;
  top: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10rpx);
}

.popup {
  position: relative;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  width: 85%;
  max-height: 70vh;
  border-radius: 50rpx;
  background-color: white;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: popupFadeIn 0.3s ease-out;
}

@keyframes popupFadeIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.gb_Box {
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 56rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.3);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
  transition: var(--transition);
}

.gb_Box:active {
  background-color: rgba(0, 0, 0, 0.4);
  transform: translateX(-50%) scale(0.9);
}

.popupBoxItem {
  position: relative;
  padding-left: 40rpx;
  box-sizing: border-box;
  width: 90%;
  height: 130rpx;
  border-radius: 25rpx;
  background-color: #fafafa;
  margin: 20rpx auto;
  font-size: 30rpx;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  transition: var(--transition);
}

.popupBoxItem:active {
  background-color: #f0f0f0;
  transform: translateX(10rpx);
}

.popup_Logo {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup_Logo image {
  width: 80%;
  opacity: 0.8;
}

::-webkit-scrollbar {
  display: none;
}

.deleteMarker {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 40rpx;
  color: var(--danger-color);
  font-size: 36rpx;
  transition: var(--transition);
}

.deleteMarker:active {
  transform: translateY(-50%) scale(1.2);
}

/* 地图控制按钮组容器 */
.map-controls {
  position: absolute;
  right: 30rpx;
  top: -220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  z-index: 10;
}

/* 地图控制按钮 */
.dwBox {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: var(--transition);
  z-index: 10;
}

.dwBox:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.dwBox image {
  width: 45%;
  margin: 0 auto;
  opacity: 0.8;
}

/* 操作按钮通用样式 */
.dwBox2 {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: white;
  line-height: 80rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: var(--transition);
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dwBox2:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.dwBox2icon {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-secondary);
}

/* 自定义提示组件样式 */
.custom-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(231, 214, 201, 0.73);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 40rpx;
  z-index: 9999;
  backdrop-filter: blur(10rpx);
  animation: toastFadeIn 0.3s ease-out;
  max-width: 80%;
  word-break: break-word;
  text-align: center;
}

@keyframes toastFadeIn {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.toast-content {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 1.5;
}

.dwBox5 image {
  width: 40%;
  margin: 0 auto;
  opacity: 0.8;
}


/* 搜索框底部功能栏 */
.Search_Box_bottomBox {
  width: 90%;
  height: 15vh;
  margin: 0 auto;
  margin-top: 2vh;
  display: flex;
  gap: 5%;
}

.Search_Box_bottomBox_item {
  flex: 1;
  height: 100%;
  border-radius: 30rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: var(--transition);
  position: relative;
  overflow: hidden;
}

.Search_Box_bottomBox_item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
  opacity: 0;
  transition: var(--transition);
}

.Search_Box_bottomBox_item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.06);
}

.Search_Box_bottomBox_item.route-active {
  background-color: var(--primary-light);
  border-radius: 30rpx;
}

.Search_Box_bottomBox_item.route-active::before {
  opacity: 1;
}

.Search_Box_bottomBox_item_content {
  display: flex;
  align-items: center;
  justify-items: center;
  flex-direction: column;
  z-index: 1;
}

.Search_Box_bottomBox_item_Title {
  font-size: 60rpx;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1;
}

.Search_Box_bottomBox_item_text {
  font-size: 26rpx;
  color: var(--text-tertiary);
  margin-top: 8rpx;
  font-weight: 400;
}

/* 路线规划面板样式 */
.route-panel {
  position: fixed;
  bottom: 200rpx;
  left: 40rpx;
  right: 40rpx;
  background: white;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
  padding: 30rpx;
  z-index: 999;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.route-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.route-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.route-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #f5f5f5;
  transition: var(--transition);
}

.route-close:active {
  background-color: #e8e8e8;
  transform: scale(0.9);
}

.route-info {
  margin-bottom: 30rpx;
}

.route-point {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  transition: var(--transition);
}

.route-point:active {
  background-color: #fafafa;
  border-radius: 20rpx;
  margin: 0 -20rpx;
  padding: 25rpx 20rpx;
}

.route-point-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.route-point-text {
  font-size: 32rpx;
  color: var(--text-primary);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

.route-arrow {
  padding-left: 24rpx;
  margin: -8rpx 0;
  color: var(--text-tertiary);
}

.route-mode {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid var(--border-color);
  border-bottom: 1rpx solid var(--border-color);
  margin-bottom: 30rpx;
}

.mode-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  border-radius: 16rpx;
  transition: var(--transition);
  color: var(--text-secondary);
}

.mode-item:active {
  background-color: #f5f5f5;
}

.mode-item.active {
  background-color: var(--primary-light);
  color: var(--primary-color);
}

.mode-item view {
  font-size: 26rpx;
  margin-top: 8rpx;
  font-weight: 500;
}

.route-action {
  margin-top: 10rpx;
}

.route-action .van-button {
  border-radius: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: 600;
  background: linear-gradient(135deg, var(--primary-color), #2c6fe0);
  border: none;
  box-shadow: 0 4rpx 20rpx rgba(65, 135, 242, 0.3);
  transition: var(--transition);
}

.route-action .van-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(65, 135, 242, 0.2);
}

/* 路线规划提示样式 */
.route-tip {
  position: fixed;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 40rpx;
  z-index: 999;
  animation: fadeIn 0.3s ease-out;
  backdrop-filter: blur(10rpx);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

.tip-content {
  font-size: 30rpx;
  font-weight: 500;
}