
/* 页面容器 */
.page-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f8f8f8;
  font-size: 32rpx;
  color: #333;
}

/* 用户区域样式 */
.user-section {
  margin-top: 30rpx;
  padding: 40rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-status, .user-info {
  display: flex;
  align-items: center;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1aad19, #36cfc9);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
  margin-right: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(26, 173, 25, 0.3);
}

.user-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
  align-self: center;
}

.user-detail {
  flex: 1;
}

.user-id {
  display: block;
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.user-tip {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.login-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background-color: #1aad19;
  border: none;
  border-radius: 40rpx;
  color: #fff;
  margin: 0;
  box-shadow: 0 4rpx 16rpx rgba(26, 173, 25, 0.3);
}

/* 设置区域样式 */
.settings-section {
  padding: 0 20rpx;
}

.settings-group {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  height: 120rpx;
  position: relative;
  transition: background-color 0.2s;
}

.setting-item:active {
  background-color: #f5f5f5;
}

.setting-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  bottom: 0;
  height: 1rpx;
  background-color: #f0f0f0;
}

.setting-icon {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  color: #1aad19;
}

.setting-title {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.setting-version {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.setting-arrow {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 退出登录区域样式 */
.logout-section {
  padding: 0 40rpx 60rpx;
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  background-color: #fff;
  color: #e64340;
  border: 1rpx solid #e64340;
  border-radius: 16rpx;
  margin: 0;
}

/* 底部信息样式 */
.footer {
  padding-bottom: 60rpx;
  text-align: center;
}

.footer-text {
  font-size: 26rpx;
  color: #999;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-section, .settings-group, .logout-section {
  animation: fadeIn 0.3s ease-out;
}

/* 响应式调整 */
@media (min-width: 768px) {
  .page-container {
    max-width: 768rpx;
    margin: 0 auto;
    box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  }
}