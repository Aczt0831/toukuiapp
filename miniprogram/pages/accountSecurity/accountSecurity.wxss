/* 账号安全页面样式 */
page { /* 页面根元素 */
  background-color: #f5f5f5;
}

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
  width: 100%;
  position: relative;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
  width: 800rpx;
  margin: 0 auto;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.back-btn {
  width: 80rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #333;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.right-space {
  width: 80rpx;
}

/* 账号信息 */
.account-info {
  background-color: #fff;
  width: 800rpx;
  margin: 20rpx auto;
  border-radius: 10rpx;
  padding: 40rpx 0;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.account-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.account-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 32rpx;
  color: #666;
}

.info-value {
  font-size: 32rpx;
  color: #333;
}

/* 安全选项列表 */
.security-list {
  background-color: #fff;
  width: 800rpx;
  margin: 20rpx auto;
  border-radius: 10rpx;
  padding: 40rpx 0;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.security-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.security-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.item-label {
  font-size: 34rpx;
  color: #333;
}

.item-right {
  display: flex;
  align-items: center;
}

.item-desc {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 提示信息 */
.tips-section {
  width: 740rpx;
  margin: 40rpx auto 20rpx;
  padding: 25rpx;
  background-color: #fff;
  border-radius: 10rpx;
  border-left: 8rpx solid #07c160;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.tips-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.tips-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-line;
}

/* 客服入口 */
.customer-service {
  width: 740rpx;
  margin: 20rpx auto;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.service-text {
  font-size: 34rpx;
  color: #07c160;
}

.service-arrow {
  font-size: 32rpx;
  color: #07c160;
}

/* 动画效果 */
.security-item:active,
.customer-service:active {
  background-color: #f8f8f8;
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
  .account-info,
  .security-list,
  .tips-section,
  .customer-service {
    width: 800rpx;
    margin-left: auto;
    margin-right: auto;
  }
}