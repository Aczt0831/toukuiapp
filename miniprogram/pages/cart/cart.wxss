/* 购物车页面样式 */
.cart-container {
  background-color: #f8f8f8;
  min-height: 100vh;
  position: relative;
}

/* 页面头部 */
.cart-header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  background-color: #fff;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cart-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.back-button {
  position: absolute;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-button image {
  width: 40rpx;
  height: 40rpx;
}

/* 空购物车状态 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  opacity: 0.5;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping {
  background-color: #1989fa;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 80rpx;
  border-radius: 60rpx;
  line-height: 1.6;
}

/* 购物车商品列表 */
.cart-items {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
}

.cart-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.item-image image {
  width: 100%;
  height: 100%;
}

.item-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #e64340;
  margin-bottom: 10rpx;
}

.item-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quantity-control {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #666;
}

.quantity-btn:active {
  background-color: #e5e5e5;
}

.quantity {
  min-width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  padding: 0 10rpx;
}

.delete-btn {
  font-size: 28rpx;
  color: #999;
  padding: 10rpx 20rpx;
}

.delete-btn:active {
  color: #e64340;
}

/* 底部结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.total-info {
  display: flex;
  align-items: baseline;
}

.total-text {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.total-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #e64340;
}

.checkout-btn {
  background-color: #e64340;
  color: #fff;
  padding: 24rpx 48rpx;
  border-radius: 60rpx;
  font-size: 30rpx;
  font-weight: 600;
  min-width: 180rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(230, 67, 64, 0.3);
  border: 2rpx solid #e64340;
  transition: all 0.3s ease;
}

.checkout-btn-hover {
  background-color: #d4380d;
  transform: scale(1.05);
  box-shadow: 0 6rpx 16rpx rgba(230, 67, 64, 0.4);
}

/* 调试信息样式 */
.debug-info {
  position: fixed;
  bottom: 140rpx;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  text-align: center;
  z-index: 9999;
}

/* 推荐商品 */
.recommended-section {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.recommended-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.recommended-item {
  background-color: #fafafa;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
}

.recommended-item image {
  width: 100%;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.recommended-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.recommended-price {
  font-size: 30rpx;
  color: #e64340;
  font-weight: 500;
}

/* 为底部结算栏留出空间 */
.cart-container {
  padding-bottom: 140rpx;
}