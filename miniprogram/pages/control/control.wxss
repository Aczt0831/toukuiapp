/* 美化的电量和音量显示条 */
.RemainderEl_box {
	width: 100%;
	height: 45rpx;
	border-radius: 22.5rpx;
	background: linear-gradient(135deg, #3550c7ff 0%, #12bda3ff 100%);
	text-align: right;
	overflow: hidden;
	box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
	position: relative;
	transition: all 0.5s ease;
}

.RemainderEl_box::after {
	content: '';
	position: absolute;
	left: 0;
	top: 0;
	height: 100%;
	width: 100%;
	background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
	animation: shimmer 2s infinite;
}

@keyframes shimmer {
	0% {
		transform: translateX(-100%);
	}
	100% {
		transform: translateX(100%);
	}
}

.RemainderEl_box_in {
	background-color: rgb(235, 235, 235);
	height: 100%;
	display: inline-block;
}

