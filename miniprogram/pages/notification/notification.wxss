/* 页面容器 */
.page-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f8f8f8;
  font-size: 32rpx;
  color: #333;
}

/* 头部样式 */
.header {
  padding: 0 40rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 设置区域样式 */
.settings-section {
  padding: 20rpx;
}

.settings-group {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  animation: fadeIn 0.3s ease-out;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  height: 120rpx;
  position: relative;
  transition: background-color 0.2s;
}

.setting-item:active {
  background-color: #f5f5f5;
}

.setting-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  bottom: 0;
  height: 1rpx;
  background-color: #f0f0f0;
}

.setting-title {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

/* 提示信息样式 */
.tip-section {
  padding: 40rpx;
  text-align: center;
  animation: fadeIn 0.3s ease-out;
}

.tip-text {
  font-size: 28rpx;
  color: #999;
  line-height: 44rpx;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式调整 */
@media (min-width: 768px) {
  .page-container {
    max-width: 768rpx;
    margin: 0 auto;
    box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  }
}