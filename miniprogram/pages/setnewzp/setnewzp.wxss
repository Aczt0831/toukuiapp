.All {
  width: 90%;
  margin: 0 auto;
  padding: 30rpx 0 100rpx;
}

/* 页面标题样式 */
.page-header {
  text-align: center;
  margin-bottom: 50rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 图片区域样式 */
.ImgBox {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.ImgBox_item {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
  position: relative;
}

.ImgBox_item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.img-hint {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 24rpx;
  text-align: center;
  padding: 10rpx 0;
}

/* 输入区域通用样式 */
.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

/* 标题输入样式 */
.addText {
  margin-bottom: 30rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 15rpx;
}

.addTextInput {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 0;
}

/* 内容输入样式 */
.addContent {
  margin-bottom: 60rpx;
}

.textarea-wrapper {
  position: relative;
  border: 1px solid #f0f0f0;
  border-radius: 8rpx;
  padding: 15rpx;
  min-height: 200rpx;
}

.contentText {
  width: 100%;
  font-size: 32rpx;
  color: #333;
  min-height: 200rpx;
  padding: 0;
  margin: 0;
  line-height: 1.5;
}

/* 字数统计样式 */
.char-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 15rpx;
}

.textarea-wrapper .char-count {
  position: absolute;
  right: 15rpx;
  bottom: 15rpx;
  margin: 0;
}

/* 提交按钮样式 */
.postBtn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 45rpx;
  background-color: #07c160;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
}

.postBtn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(7, 193, 96, 0.2);
}

.postBtn.disabled {
  background-color: #ccc;
  box-shadow: none;
  color: #fff;
}

/* 加载遮罩样式 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-content {
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 240rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(0, 0, 0, 0.1);
  border-left-color: #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 动画效果 */
@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 禁用输入框样式 */
input[disabled], textarea[disabled] {
  color: #ccc;
  background-color: #fafafa;
}

/* 适配安全区域 */
@media screen and (device-width: 375px) and (device-height: 812px) {
  .All {
    padding-bottom: 120rpx;
  }
}