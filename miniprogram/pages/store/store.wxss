/* pages/store/store.wxss */

.store-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部 */
.store-header {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 90rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.store-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.back-button {
  position: absolute;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
}

.back-button image {
  width: 100%;
  height: 100%;
}

.header-actions {
  position: absolute;
  right: 30rpx;
  display: flex;
  align-items: center;
}

.cart-icon {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-icon image {
  width: 44rpx;
  height: 44rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background-color: #fff;
}

.search-input-box {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  padding: 0 30rpx;
  height: 70rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
  background: transparent;
}

/* 分类标签 */
.category-tabs {
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-scroll {
  display: flex;
  white-space: nowrap;
  padding: 0 10rpx;
}

.category-tab {
  display: inline-block;
  padding: 10rpx 40rpx;
  margin: 0 10rpx;
  font-size: 32rpx;
  color: #666;
  border-radius: 40rpx;
  position: relative;
}

.category-tab.active {
  background-color: #1989fa;
  color: #fff;
}

/* 下拉刷新区域样式 */
.product-scroll {
  height: calc(100vh - 280rpx);
  background-color: #f5f5f5;
}

/* 加载动画样式 */
.loader {
  position: relative;
  width: 2.5em;
  height: 2.5em;
  transform: rotate(165deg);
}

.loader:before, .loader:after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  display: block;
  width: 0.5em;
  height: 0.5em;
  border-radius: 0.25em;
  transform: translate(-50%, -50%);
}

.loader:before {
  animation: before8 2s infinite;
}

.loader:after {
  animation: after6 2s infinite;
}

@keyframes before8 {
  0% {
    width: 0.5em;
    box-shadow: 1em -0.5em rgba(225, 20, 98, 0.75), -1em 0.5em rgba(111, 202, 220, 0.75);
  }

  35% {
    width: 2.5em;
    box-shadow: 0 -0.5em rgba(225, 20, 98, 0.75), 0 0.5em rgba(111, 202, 220, 0.75);
  }

  70% {
    width: 0.5em;
    box-shadow: -1em -0.5em rgba(225, 20, 98, 0.75), 1em 0.5em rgba(111, 202, 220, 0.75);
  }

  100% {
    box-shadow: 1em -0.5em rgba(225, 20, 98, 0.75), -1em 0.5em rgba(111, 202, 220, 0.75);
  }
}

@keyframes after6 {
  0% {
    height: 0.5em;
    box-shadow: 0.5em 1em rgba(61, 184, 143, 0.75), -0.5em -1em rgba(233, 169, 32, 0.75);
  }

  35% {
    height: 2.5em;
    box-shadow: 0.5em 0 rgba(61, 184, 143, 0.75), -0.5em 0 rgba(233, 169, 32, 0.75);
  }

  70% {
    height: 0.5em;
    box-shadow: 0.5em -1em rgba(61, 184, 143, 0.75), -0.5em 1em rgba(233, 169, 32, 0.75);
  }

  100% {
    box-shadow: 0.5em 1em rgba(61, 184, 143, 0.75), -0.5em -1em rgba(233, 169, 32, 0.75);
  }
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx;
  position: relative;
}

.loading-text {
  color: #666;
  font-size: 28rpx;
}

/* 骨架屏样式 */
.skeleton-item {
  display: flex;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.skeleton-image {
  width: 200rpx;
  height: 200rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  margin-right: 20rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

.skeleton-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: 20rpx;
}

.skeleton-name {
  height: 40rpx;
  width: 80%;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

.skeleton-price {
  height: 40rpx;
  width: 40%;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  animation: pulse 1.5s ease-in-out infinite;
  animation-delay: 0.2s;
}

.skeleton-count {
  height: 30rpx;
  width: 60%;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  animation: pulse 1.5s ease-in-out infinite;
  animation-delay: 0.4s;
}

@keyframes pulse {
  0% {
    opacity: 0.6;
  }
  50% {
    opacity: 0.8;
  }
  100% {
    opacity: 0.6;
  }
}

/* 商品列表 */
.product-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  display: flex;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.product-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.product-stats {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.product-count {
  color: #4caf50;
  font-weight: 500;
}

.product-sold {
  color: #ff9800;
  font-weight: 500;
}

.product-actions {
  display: flex;
  justify-content: flex-end;
}

.add-to-cart {
  background-color: #1989fa;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 15rpx 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(25, 137, 250, 0.2);
}

.add-to-cart:active {
  background-color: #0e74d4;
}

.sold-out-btn {
  font-size: 32rpx;
  background-color: #F5F5F5;
  color: #999999;
  border-radius: 40rpx;
  padding: 15rpx 40rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  color: #999;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.refresh-btn {
  font-size: 28rpx;
  background-color: #1989fa;
  color: #ffffff;
  border-radius: 30rpx;
  padding: 15rpx 60rpx;
}

/* 加载更多样式 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999999;
}