/* 摄像头视频回放页面样式 */
.video-playback-container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 页面头部 */
.video-header {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  background-color: #fff;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.video-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.back-button {
  position: absolute;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-button image {
  width: 40rpx;
  height: 40rpx;
}

/* 视频播放器区域 */
.video-player-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  min-height: 400rpx;
}

.video-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 340rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
}

.placeholder-image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
}

.placeholder-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.video-player {
  width: 100%;
}

.video {
  width: 100%;
  height: 400rpx;
  background-color: #000;
  border-radius: 12rpx;
}

.video-info {
  margin-top: 20rpx;
}

.video-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.video-time {
  font-size: 26rpx;
  color: #666;
}

/* 视频列表区域 */
.video-list-section {
  background-color: #fff;
  margin: 0 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.video-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.video-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  position: relative;
}

.video-item:active {
  background-color: #f0f0f0;
}

.video-thumbnail {
  width: 200rpx;
  height: 140rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.video-thumbnail image {
  width: 100%;
  height: 100%;
}

.video-duration {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.video-item-info {
  flex: 1;
  margin-left: 20rpx;
}

.video-item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.video-item-date {
  font-size: 24rpx;
  color: #999;
}

.video-item-status {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}

.new-tag {
  background-color: #e64340;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

/* 加载动画样式 */
.loader {
  width: 80px;
  height: 50px;
  position: relative;
  margin: 40rpx auto;
}

.loader-text {
  position: absolute;
  top: 0;
  padding: 0;
  margin: 0;
  color: #C8B6FF;
  animation: text_713 3.5s ease both infinite;
  font-size: 24rpx;
  letter-spacing: 1px;
}

.load {
  background-color: #9A79FF;
  border-radius: 50px;
  display: block;
  height: 16px;
  width: 16px;
  bottom: 0;
  position: absolute;
  transform: translateX(64px);
  animation: loading_713 3.5s ease both infinite;
}

.load::before {
  position: absolute;
  content: "";
  width: 100%;
  height: 100%;
  background-color: #D1C2FF;
  border-radius: inherit;
  animation: loading2_713 3.5s ease both infinite;
}

@keyframes text_713 {
  0% {
    letter-spacing: 1px;
    transform: translateX(0px);
  }

  40% {
    letter-spacing: 2px;
    transform: translateX(26px);
  }

  80% {
    letter-spacing: 1px;
    transform: translateX(32px);
  }

  90% {
    letter-spacing: 2px;
    transform: translateX(0px);
  }

  100% {
    letter-spacing: 1px;
    transform: translateX(0px);
  }
}

@keyframes loading_713 {
  0% {
    width: 16px;
    transform: translateX(0px);
  }

  40% {
    width: 100%;
    transform: translateX(0px);
  }

  80% {
    width: 16px;
    transform: translateX(64px);
  }

  90% {
    width: 100%;
    transform: translateX(0px);
  }

  100% {
    width: 16px;
    transform: translateX(0px);
  }
}

@keyframes loading2_713 {
  0% {
    transform: translateX(0px);
    width: 16px;
  }

  40% {
    transform: translateX(0%);
    width: 80%;
  }

  80% {
    width: 100%;
    transform: translateX(0px);
  }

  90% {
    width: 80%;
    transform: translateX(15px);
  }

  100% {
    transform: translateX(0px);
    width: 16px;
  }
}