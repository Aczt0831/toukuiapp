/* pages/wxLogin/wxLogin.wxss */

/* 全局样式 */
page {
  background-color: #ffffff;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}

/* 容器 */
.container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

/* 微信登录按钮 */
.wechat-login-btn {
  width: 80%;
  max-width: 300px;
  height: 50px;
  background-color: #07c160;
  color: #ffffff;
  font-size: 16px;
  font-weight: 500;
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(7, 193, 96, 0.3);
}

.wechat-login-btn::after {
  border: none;
}

.btn-icon {
  width: 24px;
  height: 24px;
  margin-right: 8px;
}

.btn-text {
  font-size: 16px;
  font-weight: 500;
}

/* 按钮点击效果 */
.wechat-login-btn:active {
  opacity: 0.85;
  transform: scale(0.98);
}