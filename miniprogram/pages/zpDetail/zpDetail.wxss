/* pages/zpDetail/zpDetail.wxss */
.detail-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 20rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 作品详情内容 */
.content {
  background-color: #fff;
  margin-bottom: 20rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.username {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.post-time {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 作品内容 */
.work-content {
  padding: 30rpx;
}

.work-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.work-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 作品图片 */
.image-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-top: 20rpx;
}

.work-image {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  transition: transform 0.2s ease;
}

.work-image:hover {
  transform: scale(1.02);
}

/* 图片加载状态 */
.image-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  aspect-ratio: 1;
  border-radius: 12rpx;
}

.image-error {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
  aspect-ratio: 1;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
}

.image-error-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 交互区域 */
.interaction-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-top: 20rpx;
}

/* 评论区域 */
.comments-section {
  background-color: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.comments-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comments-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.comments-count {
  font-size: 28rpx;
  color: #999;
  margin-left: 8rpx;
}

.comments-list {
  margin-top: 10rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.comment-username {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  word-break: break-all;
}

.comment-source {
  font-size: 22rpx;
  color: #999;
  margin-left: 6rpx;
}

.empty-comments {
    text-align: center;
    padding: 60rpx 0;
    color: #999;
    font-size: 28rpx;
  }

  .interaction-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0;
}

.interaction-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.interaction-icon {
  width: 40rpx;
  height: 40rpx;
}

.interaction-icon.active {
  filter: brightness(0) saturate(100%) invert(33%) sepia(85%) saturate(5402%) hue-rotate(212deg) brightness(100%) contrast(104%);
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.error-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.back-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.back-btn:active {
  background-color: #06ad56;
}

/* 评论输入弹窗样式 */
.comment-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.comment-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}

.comment-input-container {
  position: relative;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
  transform: translateY(0);
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.comment-input-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.comment-input-header text {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  flex: 1;
  margin-right: 40rpx;
}

.comment-input-header .close-btn {
  font-size: 50rpx;
  color: #999;
  font-weight: normal;
  flex: none;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-right: 0;
  transition: color 0.3s ease;
}

.comment-input-header .close-btn:active {
  color: #666;
}

.comment-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 30rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  box-sizing: border-box;
  resize: none;
  outline: none;
  background-color: #fafafa;
}

.comment-textarea::placeholder {
  color: #999;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 1.4;
}

.comment-input-footer {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.send-btn {
  min-width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 35rpx;
  padding: 0 30rpx;
  box-shadow: 0 2px 8px rgba(7, 193, 96, 0.2);
  transition: all 0.3s ease;
}

.send-btn:active {
  transform: scale(0.97);
  box-shadow: 0 1px 4px rgba(7, 193, 96, 0.3);
}

.send-btn[disabled] {
  background-color: #e0e0e0;
  background-image: none;
  color: #999;
  box-shadow: none;
}